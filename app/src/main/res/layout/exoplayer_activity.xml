<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/exo_surfaceV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/video_height"
            app:use_controller="false"/>
    <SeekBar
            android:id="@+id/seekBar_exo"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toRightOf="@id/start_exo"
            app:layout_constraintRight_toLeftOf="@id/time"
            android:max="100"
            android:progress="0"
            android:secondaryProgress="0"
            app:layout_constraintBottom_toBottomOf="@id/exo_surfaceV"
            style="@style/Base.Widget.AppCompat.SeekBar"/>
    <TextView
            android:id="@+id/tv_exo_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全屏"
            app:layout_constraintBottom_toBottomOf="@id/exo_surfaceV"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/time"
    app:layout_constraintTop_toTopOf="@id/seekBar_exo"
    android:layout_marginRight="10dp"/>
    <View android:layout_width="0dp"
          android:layout_height="30dp"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintBottom_toBottomOf="@id/exo_surfaceV"
          android:background="#20000000" app:layout_constraintHorizontal_bias="0.0" android:id="@+id/view"/>

    <TextView
            android:id="@+id/start_exo"
            android:layout_width="wrap_content"
              android:layout_height="wrap_content"
    android:text="开始"
    app:layout_constraintTop_toTopOf="@id/seekBar_exo"
    app:layout_constraintBottom_toBottomOf="@id/seekBar_exo"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@id/seekBar_exo"
    android:layout_marginLeft="10dp"/>
    <TextView
            android:text="time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            app:layout_constraintRight_toLeftOf="@id/tv_exo_full"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintLeft_toRightOf="@id/seekBar_exo"
            android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"/>
</android.support.constraint.ConstraintLayout>